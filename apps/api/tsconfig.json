{
  "extends": "@zedobambu/tsconfig-base/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "module": "node16",
    "moduleResolution": "node16",
    "noEmit": false,
    "types": ["node", "express"]
    // esModuleInterop: true,
    // forceConsistentCasingInFileNames: true,
    // strict: true
  },
  "include": ["src/**/*.ts", "src/**/*.json", "enviroment.d.ts"],
  "exclude": ["node_modules", "dist"]
}