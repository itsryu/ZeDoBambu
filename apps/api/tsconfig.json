{
  "extends": "@zedobambu/tsconfig-base/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "enviroment.d.ts"],
  "exclude": ["node_modules", "dist"]
}